@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>

<div class="text-center">
    <h1 class="display-4">Check out our roster of chefs!</h1>
    <table class='w-75 mx-auto mt-5'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th># of Dishes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Chef c in Model)
            {
                <tr>
                    <td>@c.FName @c.LName</td>
                    <td>@c.DOB.ToString("MM/dd/yyyy")</td>
                    <td>@c.AllDishes.Count</td>
                </tr>
            }
        </tbody>
    </table>
</div>
